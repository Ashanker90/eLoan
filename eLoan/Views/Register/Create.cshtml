@model eLoan.Models.Login
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{ ViewData["Title"] = "Create"; }

<h1>Register your account</h1>

<h4>Please add a password</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <p>
                    Your email is:  @HttpContextAccessor.HttpContext.Session.GetString("email")
                </p>
                <div class="form-group">
                    <label asp-for="password" class="control-label"></label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>

                <p>Your customer ID is : @HttpContextAccessor.HttpContext.Session.GetInt32("customer_id")</p>
            <div class="form-group">
                <input type="submit" value="Submit and Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
